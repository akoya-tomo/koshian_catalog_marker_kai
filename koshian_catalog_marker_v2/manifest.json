{
    "manifest_version":2,

    "name":"KOSHIAN Catalog Marker",

    "version":"2.0.1",

    "description":"開いたスレや古いスレををマークしたりレス数の増加を表示します",

    "icons":{
        "48":"icons/icon-48.png"
    },

    "content_scripts":[
        {
            "exclude_matches": ["*://*.2chan.net/*/res/*","*://*.2chan.net/*/src/*"],
            "matches":["*://*.2chan.net/*/*"],
            "js":["cat.js"],
            "css":["style.css"]
        },
        {
            "matches":["*://*.2chan.net/*/res/*"],
            "js":["res.js"]
        }
    ],

    "background":{
        "scripts":["bg.js"]
    },

    "options_ui":{
        "page":"options.html"
    },

    "permissions":["storage", "tabs", "activeTab"],

    "applications":{
        "gecko":{
            "id":"{242e2746-f3c2-4f1d-af28-0b48382962ac}"
        }
    }
}