{
    "manifest_version":2,

    "name":"KOSHIAN Catalog Marker",

    "version":"1.0.0",

    "description":"開いたスレをマークしたりレス数の増加を表示します",

    "icons":{
        "48":"icons/icon-48.png"
    },

    "content_scripts":[
        {
            "exclude_matches": ["*://*.2chan.net/*/res/*","*://*.2chan.net/*/src/*"],
            "matches":["*://*.2chan.net/*/*"],
            "js":["util.js","cat.js"]
        },
        {
            "matches":["*://*.2chan.net/*/res/*"],
            "js":["util.js","res.js"]
        }
    ],

    "background":{
        "scripts":["util.js","bg.js"]
    },

    "options_ui":{
        "page":"options.html"
    },

    "permissions":["storage", "tabs", "activeTab"],

    "applications":{
        "gecko":{
            "id":"{242e2746-f3c2-4f1d-af28-0b48382962ac}"
        }
    }
}